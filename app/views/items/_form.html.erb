<%= form_with model: @item, class: 'lot-form' do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <br/>

  <%= form.label :description %>
  <%= form.rich_text_area :description %>

  <%= form.submit 'Save' %>
  <%= link_to 'Cancel', @item.persisted? ? @item : items_path %>
<% end %>
